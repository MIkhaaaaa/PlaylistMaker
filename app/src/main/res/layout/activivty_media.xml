<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSecondary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settingsTopString14dp">

        <ImageView
            android:id="@+id/backButtonArrow"
            android:layout_width="@dimen/arrow_size"
            android:layout_height="@dimen/arrow_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="@dimen/_4dp"
            android:src="@drawable/arrow_back_icon"
            app:tint="?attr/colorPrimary" />

        <TextView
            style="@style/media_favorites_style"
            android:layout_marginStart="@dimen/_52dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/MediaLibrary"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/favorites_text1" />
    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/colorOnSecondary"
        android:textAllCaps="false"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"
        app:tabTextColor="?attr/colorPrimary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


</LinearLayout>