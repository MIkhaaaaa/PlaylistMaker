<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="top"
            android:text="@string/search_title_main"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        >

        <EditText
            android:id="@+id/searchUserText"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autofillHints="name"
            android:labelFor="@+id/just_work"
            android:hint="@string/search_title_main"
            android:drawableStart="@drawable/activity_search_icon"
            android:background="@drawable/edittext_rounded_corner"
            android:drawablePadding="@dimen/main_screen_button_margin_top"
            android:height="@dimen/settingsLeftMargin16dp"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="text"
            android:maxLength="30"
            android:minHeight="30dp"
            android:maxHeight="60dp"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/settings_text_size"
            />

    </FrameLayout>

   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_gravity="center_horizontal|bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_centerHorizontal = "true"
            android:src="@drawable/search_icon"

          />


       ></LinearLayout>

</LinearLayout>