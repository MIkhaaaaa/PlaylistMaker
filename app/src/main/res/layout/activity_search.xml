<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/text_in_activity_search_2"
            android:layout_weight="3"
            android:gravity="top"
            android:text="@string/search_title_main"
            style="@style/for_activity_search"
            android:textSize="@dimen/text_in_activity_search_2" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        >

        <EditText
            android:id="@+id/searchUserText"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:height="@dimen/settingsLeftMargin16dp"
            android:autofillHints="name"
            android:textColorHint="@color/text_color"
            android:background="@drawable/edittext_rounded_corner"
            android:drawableStart="@drawable/activity_search_icon"
            android:drawablePadding="@dimen/main_screen_button_margin_top"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search_title_main"
            android:inputType="text"
            android:maxHeight="60dp"
            android:maxLength="30"
            android:maxLines="1"
            android:minHeight="48dp"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="30dp"
            android:src="@drawable/vector"
            android:visibility="gone" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/material_motion_duration_short_1"
        android:paddingBottom="18dp"
        android:layout_gravity="bottom"
        >

        <TextView
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/b_switch"
            android:drawableTint="@color/b_switch"
            android:layout_width="@dimen/buttons_in_activity_search"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom|left"
            android:gravity="center"
            android:textSize="@dimen/text_in_activity_search"
            android:text="@string/search_button_text"
            app:drawableTopCompat="@drawable/search_icon">
        </TextView>

        <TextView
            style="@style/for_activity_search"
            android:layout_width="@dimen/buttons_in_activity_search"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:text="@string/media_button_text"
            android:textSize="@dimen/text_in_activity_search"
            app:drawableTopCompat="@drawable/media_icon">

        </TextView>

        <TextView
            style="@style/for_activity_search"
            android:layout_width="@dimen/buttons_in_activity_search"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom|end"
            android:textSize="@dimen/text_in_activity_search"
            android:text="@string/settings_str"
            app:drawableTopCompat="@drawable/setting_icon">
        </TextView>
    </FrameLayout>
</LinearLayout>