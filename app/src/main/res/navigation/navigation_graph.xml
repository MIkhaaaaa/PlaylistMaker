<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.practicum.myplaylistmaker.ui.favorites.fragments.FragmentMediaFavorites"
        android:label="MediaLibraryFragment"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.practicum.myplaylistmaker.ui.search.model.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.practicum.myplaylistmaker.ui.settings.fragment.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/bottomNavigation"
        android:name="com.practicum.myplaylistmaker.BottomNavigation"
        android:label="fragment_bottom_navigation"
        tools:layout="@layout/fragment_bottom_navigation" />
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.practicum.myplaylistmaker.ui.library.fragments.PlaylistFragment"
        android:label="PlaylistFragment" >
        <action
            android:id="@+id/action_playlistFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.practicum.myplaylistmaker.ui.player.fragments.PlayerFragment"
        android:label="player_activity"
        tools:layout="@layout/activity_media_player" >
        <action
            android:id="@+id/action_playerFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment" />
        <action
            android:id="@+id/action_playerFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_playerFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>
    <fragment
        android:id="@+id/newPlaylistFragment"
        android:name="com.practicum.myplaylistmaker.ui.library.fragments.NewPlaylistFragment"
        android:label="newPlaylistFragment" />
    <activity
        android:id="@+id/rootActivity"
        android:name="com.practicum.myplaylistmaker.ui.root.RootActivity"
        android:label="RootActivity" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.practicum.myplaylistmaker.ui.favorites.fragments.FavouritesFragment"
        android:label="FavouritesFragment" >
        <action
            android:id="@+id/action_favouritesFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_favouritesFragment_to_playerFragment2"
            app:destination="@id/playerFragment" />
    </fragment>

</navigation>